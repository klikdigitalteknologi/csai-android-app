<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:visibility="gone"
            android:id="@+id/imageReceive"
            android:layout_marginStart="@dimen/_35ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layouttextview"
            android:contentDescription="@string/image" />
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layouttextview"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/imageReceive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textreceivechat"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
               android:textSize="@dimen/_15ssp"
                android:background="@drawable/background_send_message"/>
        </LinearLayout>
        <TextView
            android:id="@+id/texttimereceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_7ssp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layouttextview"
 />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>